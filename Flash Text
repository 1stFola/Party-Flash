<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Flashing Text Demo</title>
  <style>
    body, html {
      margin:0; padding:0;
      font-family: Arial, sans-serif;
      height:100vh; display:flex;
      flex-direction:column;
      background-color:white; color:black;
      transition: background-color 0.5s, color 0.5s;
    }
    .input-area {
      padding:20px; background:#f0f0f0;
      text-align:center;
    }
    input[type="text"] {
      padding:10px; font-size:1.2rem;
      width:80%; max-width:400px;
    }
    button {
      padding:10px 20px; font-size:1rem;
      margin-left:10px;
    }
    .flash-display {
      flex-grow:1;
      display:flex; align-items:center;
      justify-content:center; font-size:4rem;
      text-align:center;
      transition: background-color 0.5s, color 0.5s;
    }
    @media(max-width:600px) {
      .flash-display { font-size:6rem; }
    }
  </style>
</head>
<body>
  <div class="input-area">
    <input type="text" id="textInput" placeholder="Enter your message..." />
    <button onclick="startFlashing()">Show</button>
  </div>
  <div id="flashArea" class="flash-display"></div>

  <script>
    let intervalId;

    async function startFlashing() {
      const text = document.getElementById("textInput").value || "";
      const flashArea = document.getElementById("flashArea");
      flashArea.textContent = text;

      if (intervalId) clearInterval(intervalId);

      // Fullscreen if available
      const docEl = document.documentElement;
      if (docEl.requestFullscreen) {
        try { await docEl.requestFullscreen(); } catch(e){}
      }

      let isBlack = true;
      intervalId = setInterval(() => {
        isBlack = !isBlack;
        if (isBlack) {
          document.body.style.backgroundColor = "white";
          document.body.style.color = "black";
        } else {
          document.body.style.backgroundColor = "black";
          document.body.style.color = "white";
        }
      }, 400); // faster: 400ms interval
    }
  </script>
</body>
</html>
